# ===================================================================
# BIOMETRIC MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# ===================================================================
# Copy this file to .env and configure your production values
# NEVER commit the .env file to version control

# ===================================================================
# SERVER CONFIGURATION
# ===================================================================
# Device communication server (where biometric devices connect)
SERVER_HOST=0.0.0.0
SERVER_PORT=7005

# Web interface and API server
WEB_HOST=0.0.0.0
WEB_PORT=5050

# ===================================================================
# HRIS API AUTHENTICATION
# ===================================================================
# CRITICAL: Change this to a strong, unique secret key in production
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
HRIS_API_SECRET_KEY=your_secure_api_secret_key_here

# Optional: Comma-separated list of allowed client IDs (leave empty to allow any)
HRIS_ALLOWED_CLIENTS=

# API token expiry in hours
HRIS_TOKEN_EXPIRY_HOURS=24

# Rate limiting
HRIS_RATE_LIMIT_REQUESTS=100
HRIS_RATE_LIMIT_WINDOW=60

# ===================================================================
# BIOMETRIC DEVICE CONFIGURATION
# ===================================================================
# Primary device ID for HRIS integration
PRIMARY_DEVICE_ID=2401058352

# ===================================================================
# WEBHOOK CONFIGURATION (Real-time HRIS Integration)
# ===================================================================
# Enable/disable webhooks
BIOMETRIC_WEBHOOK_ENABLED=true

# HRIS webhook endpoint URL
BIOMETRIC_WEBHOOK_URL=http://your-hris-server.com/api/biometric/webhook

# Webhook delivery mode: 'sync' or 'async'
BIOMETRIC_WEBHOOK_MODE=sync

# CRITICAL: Webhook signature secret - must match HRIS server
BIOMETRIC_WEBHOOK_SECRET=your_secure_webhook_secret_here

# Optional: Comma-separated list of allowed IPs for webhook delivery
BIOMETRIC_WEBHOOK_ALLOWED_IPS=

# Webhook rate limiting (requests per minute)
BIOMETRIC_WEBHOOK_RATE_LIMIT=60

# Webhook timeout in seconds
BIOMETRIC_WEBHOOK_TIMEOUT=30

# Retry configuration
BIOMETRIC_WEBHOOK_RETRY_ENABLED=true
BIOMETRIC_WEBHOOK_MAX_RETRIES=3
BIOMETRIC_WEBHOOK_RETRY_DELAY=5

# Optional: Email addresses for webhook failure alerts (comma-separated)
BIOMETRIC_WEBHOOK_ALERT_EMAILS=

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# SQLite database file path (relative to project root)
DATABASE_PATH=biometric.db

# ===================================================================
# LOGGING CONFIGURATION
# ===================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
LOG_FILE=

# ===================================================================
# DEVELOPMENT/DEBUG SETTINGS
# ===================================================================
# Enable debug mode (WARNING: Never enable in production)
DEBUG=false

# Enable request logging
REQUEST_LOGGING=true
